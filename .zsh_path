# Ubuntu Shortcuts
# ###################################################
# Setup Exports
export EDITOR='nano'

# Setup Paths
export WS="$HOME/workspace/"

# List Shortcuts
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls -atr --color=always'
# alias _='cd -'

# Grep!
alias grep='grep --color=auto'
GREP_OPTIONS='--exclude-dir=\.svn'
export GREP_OPTIONS

