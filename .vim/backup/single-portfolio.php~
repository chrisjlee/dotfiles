<?php get_header(); ?>
<body id="pg" <?php if(function_exists('body_class')) body_class(); ?> >
<?php global $post; ?>
<?php $parent=$post->post_parent; ?>
<?php $page_id=$post->ID; ?>
<?php get_template_part( 'tpt-header', 'page' ); ?>
<div id="container" class="container_16">
	<div id="content" role="main">
		<div class="title grid_16">
			<h3><?php the_title(); ?></h3>
		</div>
		<div id="sidebar" class="bfl grid_4 sidebar">
			<?php if (have_posts()): the_post();?>
			<div class="nav">
				<?php the_post_thumbnail(array(221,146)); ?>
				<ul class="side-nav">
				<?php
				if ($parent > 0):
					wp_list_pages(array('child_of' => $parent, 'title_li' => '')); 
				else:
					wp_list_pages(array('child_of' => $post->ID, 'title_li' => '')); 
				endif;
				?>
				</ul>
			</div>
		</div>
		<div class="grid_12">
			<?php $sub = get_post_meta($post->ID, "subheadline_gray_tag", true); ?>
			<?php if ($sub) : ?><h3><?php echo $sub; ?></h3><?php endif; ?>
			<?php $bigsub = get_post_meta($post->ID, "subheadline_big_tag", true); ?>
			<?php if ($bigsub) : ?><h2 class="heading"><?php echo $bigsub; ?></h2><?php endif; ?>
		
			<div id="portfolio-hero" class="hero">
				<?php $thumb_id = get_post_thumbnail_id($page_id); ?>
				<?php $images =& get_children("post_type=attachment&post_mime_type=image&order=ASC&orderby=menu_order&post_parent=$page_id"); ?>
				<?php $count = 0; ?>
				<?php foreach ((array)$images as $attachment_id => $attachment): ?>
					<?php if ($thumb_id != $attachment_id): ?>
					<div class="tabdiv" id="tab<?php echo $count; ?>">
						<?php echo wp_get_attachment_image($attachment_id, 'full'); ?>
					</div>
					<?php $count++; ?>
					<?php endif; ?>
				<?php endforeach; ?>
				<ul class="navigation">
					<?php for ($i = 0; $count > $i; $i++): ?>
					<li><a href="#tab<?php echo $i; ?>"></a></li>
					<?php endfor; ?>
				</ul>
			</div>
		</div>
		<div id="content-body" class="grid_12 pull_4"> 
			<div class="grid_8 alpha">
				<?php the_content(); ?>
				<?php $link = get_post_meta($post->ID, "portfolio_link", true); ?>
				<?php if ($link) : ?><div class="portfolio-link"><a href="<?php echo $link; ?>">Visit their page!</a></div><?php endif; ?>
			</div>
			<div class="grid_4 other-projects omega">
				<h3>More projects</h3>
				<ul>
				<?php query_posts('post_type=portfolio'); ?>
				<?php while (have_posts()): the_post(); ?>
					<li><a href="<?php the_permalink(); ?>"><?php the_title(); ?></a></li>
				<?php endwhile; ?>
				</ul>
			</div>	
			<div class="clearfix"></div>
		</div>
		<div class="clearfix"></div>
		<div class="bottom-meta"><?php dynamic_sidebar('front'); ?></div>
		
		<?php endif; ?>
	</div><!-- #content -->
	<div class="clearfix"></div>
</div><!-- #container -->
<?php get_footer(); ?>
