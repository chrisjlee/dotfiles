<?php 
/*	Wordpress Script Loader
 *  
 *  description: file loads all the scripts and stylesheets  
 *  version: 1.3 
 *  author: Chris J. Lee
 *  contributor: Felipe Rocha
 *  
 */

/*	
 * 	Obtain URL For stylesheet
 */

if ( is_child_theme() ) $themeurl = get_bloginfo('stylesheet_directory'); 
else $themeurl = get_bloginfo('template_directory');


/* 
 * Folder Shortcuts
 * 
 * AUGDIR 	Path to Child Theme
 * AUGCSS 	Path to css files
 * AUGCSSPG 	Path to CSS Pages
 * AUGJS 	Path to js Files
 * 
 */
// Theme Directory
DEFINE('AUGDIR', $themeurl );
// Theme CSS
DEFINE('AUGCSS', $themeurl."/assets/css" );
// Theme CSS for Pages
DEFINE('AUGCSSPG', $themeurl."/assets/css/pages" );
// Theme Javascript
DEFINE('AUGJS', $themeurl."/assets/js" );

/*
* Wordpress Reference for wp_enqueue_script & wp_enqueue_style
* REFERENCE:
* wp_enqueue_style($handle, $source, $dependencies, $version, $media); 
* EXAMPLE:
* wp_enqueue_style('mystyles', '/wp-content/plugins/myplugin/style.css', array('otherstyles', 'morestyles'), '1.0â€², 'screen');
* wp_deregister_script();
* REFERENCE: http://codex.wordpress.org/Function_Reference/wp_enqueue_style
* 	wp_enqueue_style( $handle, $src, $deps, $ver, $media )  
*/


/*		CSS for All Pages
*********************************************************/
wp_enqueue_style('aug_boot', AUGCSS.'/boot.css', '1.0', 'screen');
wp_enqueue_style('t_main', AUGCSS.'/main.css', array('aug_boot'), '1.0', 'screen');
wp_enqueue_style('t_common', AUGCSS.'/common.css', array('aug_boot'), '1.0', 'screen');
wp_enqueue_style( 'augcolorboxcss', AUGJS.'/plugins/colorbox/colorbox.css', 'screen' );

/*		Javascript for All Pages
*********************************************************/
if (!is_admin()) {
	wp_deregister_script('jquery');
	wp_register_script('jquery', 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js');
}
wp_enqueue_script('t_core', AUGJS.'/core.js', array('jquery'), '1.0.1');
wp_enqueue_script('augmasonry', AUGJS.'/plugins/jquery.masonry/masonry.js', array('jquery'), '1.0.1');
wp_enqueue_style('augformalizesstyle', AUGJS.'/plugins/formalize/formalize.css', 'screen');
wp_enqueue_script('augformalize', AUGJS.'/plugins/formalize/jquery.formalize.js', array('jquery'), '1.0.1');
wp_enqueue_script( 'augcolorbox', AUGJS.'/plugins/colorbox/jquery.colorbox-min.js', array('jquery'), '1.0.0' );

/*		960gs Framework for All Pages
*********************************************************/
/*if (CONFIG_960GS == true) {  
	wp_enqueue_style('t_960', AUGCSS.'/960gs/960.css',array('t_960reset','t_960text') , '1.0', 'screen');
	wp_enqueue_style('t_960reset', AUGCSS.'/960gs/reset.css', '1.0', 'screen');
	wp_enqueue_style('t_960text', AUGCSS.'/960gs/text.css', array('t_960reset'), '1.0', 'screen');
	if (wp_style_is('aug_boot'))  wp_deregister_style('aug_boot');
	if (wp_style_is('t_main'))  wp_deregister_style('t_main');
	wp_enqueue_style('t_main', AUGCSS.'/main.css', array('t_960reset'), '1.0', 'screen');		
}*/

/*		Color Box
*********************************************************/
// @todo Need to test
