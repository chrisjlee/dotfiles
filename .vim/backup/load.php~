/*		Dropdowns
*********************************************************/
if (CONFIG_DROPDOWN == true) { 
	//wp_enqueue_style('t_superfish', AUGJS.'/plugins/superfish/css/superfish.css', '1.0', 'screen');	
	//wp_enqueue_style('t_superfish_custom', AUGJS.'/plugins/superfish/css/superfish.custom.css', array('t_superfish'), '1.0', 'screen');	
	wp_enqueue_script('t_superfish', AUGJS.'/plugins/superfish/js/superfish.js', array('jquery'), '1.0.0' );
	wp_enqueue_script('t_superfish_supersubs', AUGJS.'/plugins/superfish/js/supersubs.js', array('jquery', 't_superfish'), '1.0.0', true );	
	wp_enqueue_script('t_superfish_bgiframe', AUGJS.'/plugins/superfish/js/jquery.bgiframe.min.js', array('jquery', 't_superfish'), '1.0.0', true );		
	wp_enqueue_script('t_superfish_config', AUGJS.'/plugins/superfish/js/superfish.config.js', array('jquery', 't_superfish'), '1.0.0' ); 		
}

/*		Innerfade
*********************************************************/
if (CONFIG_INNERFADE == true) { 
	wp_enqueue_script('innerfade', AUGJS.'/plugins/jquery.innerfade/js/jquery.innerfade.js', array('jquery'), '1.0.0');	 		
}


/*		Blog
*********************************************************/
if (is_home() ) { 
	wp_enqueue_style('t_blog', AUGCSSPG.'/blog.css', array('t_main'), 'screen'); 
	wp_enqueue_script( 'augcolorbox', AUGJS.'/plugins/colorbox/jquery.colorbox-min.js', array('jquery'), '1.0.0' );
	wp_enqueue_style( 'augcolorboxcss', AUGJS.'/plugins/colorbox/colorbox.css', 'screen' );
}

/*		Front
*********************************************************/
if ( is_front_page() ) { 
	wp_deregister_script('jqueryui');
	wp_enqueue_script('jqueryui', 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js', array('jquery'), '1.8.11');
	wp_enqueue_style('t_front', AUGCSSPG.'/front.css', array('t_main'), 'screen'); 
	wp_enqueue_script( 't_front', AUGJS.'/pages/front.js', array('jquery'), '1.0.0', TRUE);
	wp_enqueue_script( 'augeasing', AUGJS.'/plugins/jquery.coda/javascripts/jquery.easing.1.3.js', array('jquery'), '1.3');						
	wp_enqueue_script( 'augcoda', AUGJS.'/plugins/jquery.coda/javascripts/jquery.coda-slider-2.0.js', array('jquery', 'augeasing'), '2.0.0');
	wp_enqueue_script( 'augcarousellite', AUGJS.'/plugins/jcarousellite/jcarousellite_1.0.1.min.js', array('jquery', 'augeasing'), '1.0.0');
	wp_enqueue_script( 'augcolorbox', AUGJS.'/plugins/colorbox/jquery.colorbox-min.js', array('jquery'), '1.0.0' );
	wp_enqueue_style( 'augcolorboxcss', AUGJS.'/plugins/colorbox/colorbox.css', 'screen' );
}

/*		Subpages
*********************************************************/
if (is_page('our-work') OR is_single()) {
	wp_deregister_script('jqueryui');
	wp_enqueue_script('jqueryui', 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js', array('jquery'), '1.8.11');
	wp_enqueue_script('augwork', AUGJS.'/pages/work.js', array('jquery'), '1.0.0', TRUE);
	wp_enqueue_script('augblog', AUGJS.'/pages/blog.js', array('jquery', 'augeasing'), '1.0.0');
}

/*
if (is_single('external-videos')) {
	wp_enqueue_script('augblog', AUGJS.'/pages/blog.js', array('jquery', 'augeasing'), '1.0.0');
}

if (is_single('portfolio')) {
	wp_deregister_script('augblog');
}
*/
if (is_category() OR is_home() || is_tax() OR is_page('fun-page') OR is_single()) {

	wp_enqueue_script( 'augeasing', AUGJS.'/plugins/jquery.coda/javascripts/jquery.easing.1.3.js', array('jquery'), '1.3');		
	wp_enqueue_script( 'augcarousellite', AUGJS.'/plugins/jcarousellite/jcarousellite_1.0.1.min.js', array('jquery', 'augeasing'), '1.0.0');
}

if (is_category() OR is_home() || is_tax() OR is_page('fun-page')) {
	wp_enqueue_script( 'augblog', AUGJS.'/pages/blog.js', array('jquery', 'augeasing'), '1.0.0');
}

if ( !is_home() && !is_front_page() ) { 
	wp_enqueue_style('t_sub', AUGCSSPG.'/sub.css', 'screen'); 
}

?>
