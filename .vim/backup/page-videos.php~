<?php get_header(); ?>
<body id="pg" <?php if(function_exists('body_class')) body_class(); ?> >
<?php global $post; ?>
<?php $parent=$post->post_parent; ?>
<?php get_template_part( 'tpt-header', 'page' ); ?>
<div id="container" class="container_16">
	<div id="content" role="main">
		<div class="title grid_16">
			<h3 class="headline"><?php the_title(); ?></h3>
			<?php $sub = get_post_meta($post->ID, "subheadline_gray_tag", true); ?>
			<?php if ($sub) : ?><h5 class="gray-headline"><?php echo $sub; ?></h5><?php endif; ?>
		</div>
		<div id="sidebar" class="bfl grid_4 sidebar">
			<?php if (have_posts()): the_post();?>
				<div class="nav">
					<?php the_post_thumbnail(); ?>
					<ul class="side-nav">
					<?php
					if ($parent > 0):
						wp_list_pages(array('child_of' => $parent, 'title_li' => '')); 
					else:
						wp_list_pages(array('child_of' => $post->ID, 'title_li' => '')); 
					endif;
					?>
					</ul>
				</div>
				<div class="page-sidebar"><?php dynamic_sidebar('page-sidebar'); ?></div>
				<?php $q = new WP_Query(array('post_type'=>'testimonials', 'orderby' => 'rand')); ?>
				<?php if ($q->have_posts()) : $q->the_post(); ?>
				<div class="testimonials">
					<div class="content"><?php the_content(); ?></div>
					<h3>by <?php the_title(); ?></h3>
					<?php $website = get_post_meta($post->ID, "testimonial_web_site", true); ?>
					<?php if ($website) : ?><div class="website"><?php echo $website; ?></div><?php endif; ?>
				</div>
				<?php endif; ?>
				<?php wp_reset_postdata(); ?>
		</div>
		<div id="content-body" class="entry bfl grid_12">
			<?php $bigsub = get_post_meta($post->ID, "subheadline_big_tag", true); ?>
			<?php if ($bigsub) : ?><h2 class="heading"><?php echo $bigsub; ?></h2><?php endif; ?>

		        <?php $q = new WP_Query('post_type=external-videos&posts_per_page=5'); ?>
			<div class="youtube">
			<?php for ($i = -1; $q->have_posts(); $i++): $q->the_post(); ?>
        			<?php if ($i == -1): ?>
					<?php $code = get_post_meta($post->ID, 'video_id', true); ?> 
					<div style="text-align: center; margin: auto">
						<object type="application/x-shockwave-flash" style="width:700px; height: 375px;" data="http://www.youtube.com/v/<?php echo $code; ?>">
						<param name="movie" value="http://www.youtube.com/v/<?php echo $code; ?>" />
						</object>
					</div>
				<?php else: ?>
					<?php if (($i%4) == 0): $class = 'alpha'; ?>
					<?php elseif (($i%4) == 3): $class = 'omega'; ?>
					<?php else: $class = ' '; ?>
					<?php endif; ?>
					<?php $image = get_post_meta($post->ID, 'thumbnail_url', true); ?>
					<div class="video page grid_3 <?php echo $class; ?>">
						<img class="small-thumb grid_3" src="<?php echo $image; ?>" />               
						<div class="title">
                                                      <a href="<?php the_permalink(); ?>"><?php the_title(); ?></a>
						</div>
					</div>
				<?php endif; ?>
			<?php endfor; ?>
			</div>
			<div class="related"><?php dynamic_sidebar('page-related'); ?></div>
			<div class="clearfix"></div>
		</div>
		
		<?php endif; ?>
		<div class="clearfix"></div>
		<div class="bottom-meta"><?php dynamic_sidebar('front'); ?></div>
	</div><!-- #content -->
	<div class="clearfix"></div>
</div><!-- #container -->
<?php get_footer(); ?>
