export_vim()
{

                echo "starting to export VIM configuration"

		echo "exporting vim to felipellrocha.com"
		scp -r  ~/.vim* felroc2@felipellrocha.com:~/

		echo "exporting vim to linode"
		scp -r -P 35125  ~/.vim* felipe@globerunnerseo.com:~/

		echo "exporting vim to grs"
		scp -r ~/.vim* seodallas.biz@seodallas.biz:~/

		echo "exporting vim to church"
		scp -r ~/.vim* sda7dfw@dallasbrsda.org:~/

                echo "done exporting"
}
