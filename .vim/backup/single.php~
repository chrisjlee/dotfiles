						<?php $curauthor = get_userdata($post->post_author); ?>
  						<h2 class="first-entry-title entry-title">
							<a href="<?php the_permalink(); ?>" title="<?php printf( esc_attr__( 'Permalink to %s', 'twentyten' ), the_title_attribute( 'echo=0' ) ); ?>" rel="bookmark"><?php the_title(); ?></a>
						</h2>
	 					<div class="entry-meta">
							<?php the_post_thumbnail(array(220,130)); ?>
							<div class="clearfix"></div>
							<?php echo get_avatar($curauthor->user_email, 40); ?>
							<strong class="author"><?php echo get_the_author_link(); ?></strong>
							<span class="job-title"><?php echo $curauthor->job_title; ?></span>
							<br />
							<span class="date"><?php the_time('F j, Y'); ?></span>
							<?php if ($tt=$curauthor->twitter) : ?>
							<?php $tt = str_replace('http://twitter.com/', '', $tt); ?>
							<?php $tt = str_replace('http://www.twitter.com/', '', $tt); ?>
							<?php // Twitter button ?><a href="http://twitter.com/<?php echo $tt; ?>" class="twitter-follow-button">Follow @<?php echo $tt; ?></a><script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
							<?php endif; ?>
						</div>
						<div class="entry-summary entry-content">
							<?php the_content(); ?>
						</div>
					</div>
					<div>
						<a name="comment"></a>
						<?php comments_template( '', true ); ?>
					</div>
				<?php endif; ?>
