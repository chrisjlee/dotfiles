COLORTURQUOISE="\[\e[0;36m\]" # Turqouise
COLORGREEN="\[\e[0;32m\]" # Green
COLORPINK="\[\e[01;35m\]" # Pink
ENDCOLOR="\[\e[0m\]" # Default

export PS1="$COLORTURQUOISE[ $COLORGREEN\u@\h $COLORPINK \w $COLORTURQUOISE]\n$COLORPINK\$ $ENDCOLOR"
